<div class="container my-4 border border-black border-1 border-opacity-25 rounded p-2" >
  <ul class="list-group">

    <li class="list-group-item border-0">
        <h3 class="text-center">Result generator Management</h3>
    </li>

  </ul>
<div class="d-flex justify-content-start align-items-center w-100 shadow-sm p-1 mb-4 bg-secondary bg-opacity-25 rounded border border-1 border-black border-opacity-10 flex-grow-1">
    <div class="w-50 d-flex m-1 ">
        <form class="form-inline w-75 "id="noSubmitForm">
          <input class="form-control mr-sm-2 rounded-0 rounded-start-1 border " type="search" placeholder="Search" aria-label="Search" id="search">
        </form>
        <div class="dropdown w-50">
            <button class="btn btn-primary dropdown-toggle rounded-0 rounded-end-1 " type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" aria-label="Select search column">
              Select column
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" id="dropdownMenu">

            </div>

        </div>
  </div>
        <a href="/result/generator/new" class="btn btn-outline-primary w-50">Create New Result Calc</a>

  </div>

<table class="table table-striped table-hover table-bordered w-100 m-0" id="TableBody">
        <thead class="table-primary">
            <th scope="col">Category</th>
            <th scope="col">Calc template</th>
            <th scope="col">Status</th>

            <th scope="col"  width="10%">&nbsp;</th>

        </thead>
        <tbody class="align-middle" id="TableBody">
            <% generators.forEach(generator => { %>
      <tr>
        <td><%= generator.category.CategoryDispName %></td>
        <td>R1F: <%= generator.calcSchemaTemplate.round1FirstP %>%, R1S: <%= generator.calcSchemaTemplate.round1SecondP %>%, R2F: <%= generator.calcSchemaTemplate.round2FirstP %>%</td>

        <td><select name="" id="status-<%= generator._id %>" class="form-select shadow-none" onchange="updateGenerator('<%= generator._id %>', this.value)">
            <option value="true" <%= generator.active == true ? 'selected' : '' %>>Active</option>
            <option value="false" <%= generator.active === false ? 'selected' : '' %>>Inactive</option>
        </select></td>
        <td class="text-center" style="width: 15%;">
          <a href="/result/generator/edit/<%= generator._id %>" class="btn btn-warning btn-sm shadow-none m-1" aria-label="Edit result generator"><i class="bi bi-pen"></i></a>
          <button type="button" class="btn btn-danger btn-sm m-1" data-bs-toggle="modal"
                  data-bs-target="#deleteModal" data-horseid="<%= generator._id %>" aria-label="Delete result generator"><i class="bi bi-trash"></i></button>
        </td>
      </tr>
            <% }); %>
        </tbody>
    </table>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
    aria-hidden="true" style="backdrop-filter: blur(5px);">
    <div class="modal-dialog" role="document">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete result generator</h5>
                <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="deleteConfirmationText">Are you sure you want to delete this result generator?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>

    function updateGenerator(generatorId, newStatus) {
        fetch('/result/generator/status/' + generatorId, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ status: newStatus })
        }).then(response => {
            if (response.ok) {
                ShowSuccessToast('Generator updated successfully');
            } else {
                ShowErrorToast('Error updating generator status');
                window.location.reload();
            }
        });
    }

document.addEventListener('DOMContentLoaded', function() {
    let IdToDelete = null;
    const deleteModal = document.getElementById('deleteModal');
    const confirmDeleteButton = document.getElementById('confirmDeleteButton');

    deleteModal?.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget;
        IdToDelete = button.getAttribute('data-horseid');
    });

    confirmDeleteButton?.addEventListener('click', () => {
        fetch('/result/generator/delete/' + IdToDelete, {
            method: 'DELETE'
        }).then(response => {
            if (response.ok) {
                window.location.reload();
            } else {
                window.location.reload();
            }
        });
    });
});
</script>
