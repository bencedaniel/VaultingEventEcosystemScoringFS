<div class="container my-4 border border-black border-1 border-opacity-25 rounded p-2" >
  <ul class="list-group">

    <li class="list-group-item border-0">
        <h3 class="text-center">Modify programs on <%= dailytable.DayName %></h3>
    </li>

  </ul>
<div class="d-flex justify-content-start align-items-center w-100 shadow-sm p-1 mb-4 bg-secondary bg-opacity-25 rounded border border-1 border-black border-opacity-10 flex-grow-1">
    <div class="w-50 d-flex m-1 ">
        <form class="form-inline w-75 "id="noSubmitForm">
          <input class="form-control mr-sm-2 rounded-0 rounded-start-1 border " type="search" placeholder="Search" aria-label="Search" id="search">
        </form>
        <div class="dropdown w-50 ">
            <button class="btn btn-primary dropdown-toggle rounded-0 rounded-end-1 " type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" aria-label="Select search column">
              Select column
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" id="dropdownMenu">

            </div>

        </div>
  </div>
        <a href="/dailytimetable/dashboard" class="btn btn-primary w-25 me-2">Back to Day view</a>
        <a href="/dailytimetable/newTTelement/<%= dailytable._id %>" class="btn btn-outline-primary w-25">Create New program under <%= dailytable.DayName %></a>

  </div>

<table class="table table-striped table-hover table-bordered w-100 m-0" id="TableBody">
        <thead class="table-primary">
            <th scope="col">Name</th>
            <th scope="col">Start Time Planned</th>
            <th scope="col">Start Time Real</th>
            <th scope="col">Categories</th>
            <th scope="col">Test Type</th>
            <th scope="col">Round</th>
            <th scope="col"  width="25%%">&nbsp;</th>

        </thead>
        <tbody class="align-middle" id="TableBody">
            <% formData.sort((a, b) => new Date(a.StartTimePlanned) - new Date(b.StartTimePlanned)).forEach(Dttpart => { %>
      <tr>
        <td><%= Dttpart.Name %></td>
        <td><%= Dttpart.StartTimePlanned.toLocaleString("hu-HU") %></td>
        <td><%= Dttpart.StartTimeReal ? Dttpart.StartTimeReal.toLocaleString("hu-HU") : 'Not started yet' %></td>
        <td><%= Dttpart.Category.map(v => v.CategoryDispName).join(', ') %></td>
        <td><%= Dttpart.TestType %></td>
        <td><%= Dttpart.Round %></td>

        <td class="text-center" style="width: 25%;">
            <a href="/order/edit/<%= Dttpart._id %>" class="btn btn-info btn-sm shadow-none m-1"><i class="bi bi-list"></i> Manage Order</a>
          <a href="/dailytimetable/editTTelement/<%= Dttpart._id %>" class="btn btn-warning btn-sm shadow-none m-1"><i class="bi bi-pen"></i></a>
          <button type="button" class="btn btn-success btn-sm m-1" data-bs-toggle="modal"
                  data-bs-target="#saveModal" data-timetablepartid="<%= Dttpart._id %>" aria-label="Save time"><i class="bi bi-clock"></i></button>

          <button type="button" class="btn btn-danger btn-sm m-1" data-bs-toggle="modal"
                  data-bs-target="#deleteModal" data-timetablepartid="<%= Dttpart._id %>" aria-label="Delete timetable part"><i class="bi bi-trash"></i></button>
        </td>
      </tr>
            <% }); %>
        </tbody>
    </table>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
    aria-hidden="true" style="backdrop-filter: blur(5px);">
    <div class="modal-dialog" role="document">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete timetable part</h5>
                <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="deleteConfirmationText">Are you sure you want to delete this timetable part?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton">Delete</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="saveModal" tabindex="-1" role="dialog" aria-labelledby="saveModalLabel"
    aria-hidden="true" style="backdrop-filter: blur(5px);">
    <div class="modal-dialog" role="document">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title" id="saveModalLabel">Save timetable part starttime</h5>
                <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="saveConfirmationText">Are you sure you want to save the start time to this part?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="confirmSaveButton">Save</button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    let IdToDelete = null;
    const deleteModal = document.getElementById('deleteModal');
    const confirmDeleteButton = document.getElementById('confirmDeleteButton');

    deleteModal?.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget;
        IdToDelete = button.getAttribute('data-timetablepartid');
    });

    confirmDeleteButton?.addEventListener('click', () => {
        fetch('/dailytimetable/deleteTTelement/' + IdToDelete, {
            method: 'DELETE'
        }).then(response => {
            if (response.ok) {
                window.location.reload();
            } else {
                window.location.reload();
            }
        });
    });

    let IdToSave = null;
    const saveModal = document.getElementById('saveModal');
    const confirmSaveButton = document.getElementById('confirmSaveButton');

    saveModal?.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget;
        IdToSave = button.getAttribute('data-timetablepartid');
    });

    confirmSaveButton?.addEventListener('click', () => {
        fetch('/dailytimetable/saveTTelement/' + IdToSave, {
            method: 'POST'
        }).then(response => {
            if (response.ok) {
                window.location.reload();
            } else {
                window.location.reload();
            }
        });
    });
});
</script>

</script>
