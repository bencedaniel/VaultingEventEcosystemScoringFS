<div class="container my-4 border border-black border-1 border-opacity-25 rounded p-2" >
  <ul class="list-group">

    <li class="list-group-item border-0">
        <h3 class="text-center">Day Management</h3>
    </li>

  </ul>
<div class="d-flex justify-content-start align-items-center w-100 shadow-sm p-1 mb-4 bg-secondary bg-opacity-25 rounded border border-1 border-black border-opacity-10 flex-grow-1">
    <div class="w-50 d-flex m-1 ">
        <form class="form-inline w-75 "id="noSubmitForm">
          <input class="form-control mr-sm-2 rounded-0 rounded-start-1 border " type="search" placeholder="Search" aria-label="Search" id="search">
        </form>
        <div class="dropdown w-50 ">
            <button class="btn btn-primary dropdown-toggle rounded-0 rounded-end-1 " type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" aria-label="Select search column">
              Select column
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" id="dropdownMenu">

            </div>

        </div>
  </div>
        <a href="/dailytimetable/new" class="btn btn-outline-primary w-50">Create New Day</a>

  </div>

<table class="table table-striped table-hover table-bordered w-100 m-0" id="TableBody">
        <thead class="table-primary">
            <th scope="col">Day name</th>
            <th scope="col">Display Name(On print,screen)</th>
            <th scope="col">Date</th>
            <th scope="col">No of parts</th>
            <th scope="col"  width="25%%">&nbsp;</th>

        </thead>
        <tbody class="align-middle" id="TableBody">
            <% dailytimetables.forEach(Dttpart => { %>
      <tr>
        <td><%= Dttpart.DayName %></td>
        <td><%= Dttpart.DisplayName %></td>
        <td><%= Dttpart.Date.toLocaleDateString() %></td>
        <% count =0 %>
        <td><% timetableparts.forEach(element => {
            if(String(element.dailytimetable) === String(Dttpart._id)){
                count = count +1
            }
        }); %>
        <%= count %>
</td>
        <td class="text-center" style="width: 25%;">
           <a href="/dailytimetable/dayparts/<%= Dttpart._id %>" class="btn btn-info btn-sm shadow-none m-1 ms-3" ><i class="bi bi-info-circle"></i> - View attached parts</a>
          <a href="/dailytimetable/edit/<%= Dttpart._id %>" class="btn btn-warning btn-sm shadow-none m-1" aria-label="Edit daily timetable"><i class="bi bi-pen"></i></a>

          <button type="button" class="btn btn-danger btn-sm m-1" data-bs-toggle="modal"
                  data-bs-target="#deleteModal" data-dailytimetableid="<%= Dttpart._id %>" aria-label="Delete daily timetable"><i class="bi bi-trash"></i></button>
        </td>
      </tr>
            <% }); %>
        </tbody>
    </table>

<div class="modal fade" id="deleteModal" tabindex="-1" dailytimetable="dialog" aria-labelledby="deleteModalLabel"
    aria-hidden="true" style="backdrop-filter: blur(5px);">
    <div class="modal-dialog" dailytimetable="document">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete dailytimetable</h5>
                <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="deleteConfirmationText">Are you sure you want to delete this dailytimetable?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton" data-deleteslug="dailytimetable" data-beforeurl="/admin">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    let IdToDelete = null;
    const deleteModal = document.getElementById('deleteModal');
    const confirmDeleteButton = document.getElementById('confirmDeleteButton');

    deleteModal?.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget;
        IdToDelete = button.getAttribute('data-dailytimetableid');
    });

    confirmDeleteButton?.addEventListener('click', () => {
        fetch('/dailytimetable/delete/' + IdToDelete, {
            method: 'DELETE'
        }).then(response => {
            if (response.ok) {
                window.location.reload();
            } else {
                window.location.reload();
            }
        });
    });
});
</script>
