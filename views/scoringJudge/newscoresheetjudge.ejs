        textarea.className = records.className;  // Ugyanazok a stílusok
        textarea.id = records.id;  // Azonos id
        textarea.placeholder = records.placeholder;  // Helyettesítő szöveg
        textarea.name = records.name;  // Név
        textarea.style = records.style.cssText;  // Azonos stílus
        textarea.value = records.value;  // Az input mező értéke
        textarea.style.resize = 'none'; // Nem átméretezhető
        // Az input mező eltávolítása
        records.parentNode.replaceChild(textarea, records);
        textarea.addEventListener('input', () => {
          calculateScore();
        });
      }
}


