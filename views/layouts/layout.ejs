<script>


<% if (test) { %>

    function showTestDbIndicator() {
      const testDbIndicator = document.getElementById('testDbIndicator');
      if (testDbIndicator && testDbIndicator.style.display === 'none') {
        testDbIndicator.style.display = 'block';
      } else if (testDbIndicator) {
        testDbIndicator.style.display = 'none';
      }



  }


  <% } %>

  function showEventPopup() {

    const modal = new bootstrap.Modal(document.getElementById('EventViewModal'));
    modal.show();
  }
    const alertmodal = new bootstrap.Modal(document.getElementById('AlertViewModal'));


    function getCookie(name) {
    const cookie = document.cookie
        .split("; ")
        .find(row => row.startsWith(name + "="));

    return cookie ? cookie.split("=")[1] : null;
}
    const alertCounter = <%= numberofalerts %>;


  if(alertCounter != 0){
    let alertList = [];
    <% alerts.forEach(element => { %>
      <% if (element.active === true) { %>

      alertList.push(parseInt(<%= element.reappear%>));
      <% } %>

    <% }) %>


    if (alertList.length > 0) {
      const minimum = Math.min(...alertList)

      if(!document.cookie.includes("Reappear=")){
          alertmodal.show();
          const value= minimum;
          const time = value * 60;
          document.cookie = `Reappear=${value}; max-age=${time}; path=/`;
          
      }else{
        cookiedata = parseInt(getCookie("Reappear"))
        if(minimum<cookiedata){
            const value= minimum;
            const time = value * 60;
            document.cookie = `Reappear=${value}; max-age=${time}; path=/`;

          }
      }

    }
  }
    const alertCounterSpan = document.getElementById("alertCounter")
  
    if(alertCounter != 0){
              alertCounterSpan.innerHTML = alertCounter
              alertCounterSpan.classList.remove("d-none");

    }


    
    function openAlertBox(){
      alertmodal.show()
    }
</script>

