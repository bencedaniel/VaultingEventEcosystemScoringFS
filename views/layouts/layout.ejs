<!-- Alert modal (KÜLÖN, nem beágyazva) -->
<div class="modal fade" id="AlertViewModal" tabindex="-1" aria-labelledby="AlertViewModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content border-0 shadow">
      <div class="modal-header">
        <h5 class="modal-title text-center" id="AlertViewModalLabel">Ongoing alerts</h5>
        <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
          <% let numberofalerts=0 %>
          <% alerts.forEach(element => { %>
          
          <% if (element.active && Array.isArray(permissons) && permissons.includes(element.permission)) { %>

                <div class="w-100 bg-<%=element.style%> bg-opacity-25 border border-<%=element.style%> rounded p-3 mt-2 mb-2">
                    <h5><%= element.title %><span class="h6 opacity-25 ps-5"><%= element.style == 'primary' ? '(System alert)' : '' %></span></h5>
                    <hr>
                    <p><%= element.description %></p>
                    <% numberofalerts++ %>
                </div>  
          <% } %>
          <% }) %>
          <% if (numberofalerts == 0) { %>
            <div class="w-100 bg-success bg-opacity-25 border border-success rounded p-3 mt-2 mb-2">
                    <h5>No alerts found</h5>
                </div>  
           
          <% } %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>



