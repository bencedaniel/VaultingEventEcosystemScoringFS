<!doctype html>
<html lang="hu">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- Bootstrap 5 CSS (CDN) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>

<div class="container my-4 border border-black border-1 border-opacity-10 rounded p-3 shadow bg-primary bg-opacity-10" style="max-width: 80vh;">
  <h1 class="text-center mb-3">Input for Judges</h1>

  <form action="/judges" method="POST">
    <div class="row justify-content-center g-3 m-auto">
        <div>
      <ul class="nav nav-tabs border-0 ms-2" role="tablist">
        <li class="nav-item me-1" role="presentation">
          <button class="nav-link active bg-white rounded-top border border-black border-opacity-25" id="tab-judges" data-bs-toggle="tab" data-bs-target="#pane-judges" type="button" role="tab" aria-controls="pane-judges" aria-selected="true">Judges</button>
        </li>
        <li class="nav-item me-1" role="presentation">
          <button class="nav-link bg-white rounded-top border border-black border-opacity-25" id="tab-days" data-bs-toggle="tab" data-bs-target="#pane-days" type="button" role="tab" aria-controls="pane-days" aria-selected="false">Days</button>
        </li>
        <li class="nav-item me-1" role="presentation">
          <button class="nav-link bg-white rounded-top border border-black border-opacity-25" id="tab-cats" data-bs-toggle="tab" data-bs-target="#pane-cats" type="button" role="tab" aria-controls="pane-cats" aria-selected="false">Categories</button>
        </li>
      </ul>

      <div class="col-12">
        <div class="tab-content border border-black border-opacity-25 rounded p-3" id="tabsContent">
          <div class="tab-pane fade show active" id="pane-judges" role="tabpanel" aria-labelledby="tab-judges">
            <h2 class="h5 mb-2 text-center">Judges</h2>
            <p class="text-center mb-0">Add all judges.</p>
            <div class="input-group mt-2 mb-2" id="JudgeInputs">

            </div>
            <button class="btn btn-success mt-2" type="button" id="addJudgeBtn">
              <i class="bi bi-plus-lg"></i> Add Judge
            </button>
          </div>

          <div class="tab-pane fade" id="pane-days" role="tabpanel" aria-labelledby="tab-days">
            <h2 class="h5 mb-2 text-center">Days</h2>
            <p class="text-center mb-0">Number of the event days.</p>
            <input type="number" class="form-control mt-2" id="NumDays" name="NumDays" min="1" max="10" value="1">
          </div>

          <div class="tab-pane fade" id="pane-cats" role="tabpanel" aria-labelledby="tab-cats">
            <h2 class="h5 mb-2 text-center">Categories</h2>
            <p class="text-center mb-0">Please fill in the details for the Categories.</p>
          </div>
        </div>
      </div>
      </div>

      <!-- Submit Button -->
      <div class="col-md-12 mt-3">
        <button type="submit" class="btn btn-primary w-100">Create Judges table</button>
      </div>

    </div>
  </form>
</div>

<!-- Edit Category Modal -->
<div class="modal fade" id="editCategoryModal" tabindex="-1" aria-labelledby="editCategoryModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editCategoryModalLabel">Edit Category</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="modalCategoryId">
        <input type="hidden" id="modalDayNumber">

        <div class="mb-3">
          <label for="modalCategoryName" class="form-label">Category Name</label>
          <input type="text" class="form-control" id="modalCategoryName" placeholder="Enter category name">
        </div>

        <div class="mb-3">
          <label for="modalCategoryTime" class="form-label">Time</label>
          <input type="time" class="form-control" id="modalCategoryTime">
        </div>

        <div class="mb-3">
          <label class="form-label">Conflicted Judges</label>
          <div id="modalConflictedJudges">
            <!-- Checkboxes will be dynamically added here -->
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="saveCategoryBtn">Save</button>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap Bundle JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    let categoryCounter = 0;
    const categories = {}; // Store category data

    document.getElementById('addJudgeBtn').addEventListener('click', function() {
        const inputContainer = document.getElementById('JudgeInputs');
        addInputFieldtoJudgeContainer(inputContainer);
    });

    document.getElementById('NumDays').addEventListener('change', function() {
        const numDays = parseInt(this.value, 10);
        addCategoryInputs(numDays);
    });

    function addInputFieldtoJudgeContainer(inputContainer) {
        const newInputGroup = document.createElement('div');
        newInputGroup.classList.add('input-group', 'mb-2');

        newInputGroup.innerHTML = `
          <input type="text" class="form-control judge-input" placeholder="Enter a judge name" aria-label="Judge name" name="JudgeName[]">
          <button class="btn btn-danger" type="button" title="Remove">
            <i class="bi bi-trash"></i>
          </button>
        `;

        newInputGroup.querySelector('button').addEventListener('click', function() {
          inputContainer.removeChild(newInputGroup);
          updateConflictedJudgesInModal();
        });

        newInputGroup.querySelector('input').addEventListener('input', function() {
          updateConflictedJudgesInModal();
        });

        inputContainer.appendChild(newInputGroup);
    }

    function addCategoryInputs(numDays) {
        const catPane = document.getElementById('pane-cats');

        catPane.innerHTML = `
          <h2 class="h5 mb-2 text-center">Categories</h2>
          <p class="text-center mb-0">Please fill in the details for the Categories.</p>
        `;

        for (let i = 1; i <= numDays; i++) {
            const dayDiv = document.createElement('div');
            dayDiv.classList.add('mb-4', 'border', 'border-secondary', 'border-opacity-25', 'rounded', 'p-3');
            dayDiv.innerHTML = `
              <h2 class="h6 text-center mb-3">Day ${i}</h2>
              <div id="categoriesDay${i}"></div>
              <button class="btn btn-success btn-sm mt-2" type="button" onclick="addCategoryRow(${i})">
                <i class="bi bi-plus-lg"></i> Add Category
              </button>
            `;

            catPane.appendChild(dayDiv);
            addCategoryRow(i);
        }
    }

    function addCategoryRow(dayNumber) {
        const container = document.getElementById(`categoriesDay${dayNumber}`);
        const categoryId = `cat_${dayNumber}_${categoryCounter++}`;

        // Initialize category data
        categories[categoryId] = {
            name: '',
            time: '',
            conflictedJudges: []
        };

        const categoryDiv = document.createElement('div');
        categoryDiv.classList.add('input-group', 'mb-2');
        categoryDiv.setAttribute('data-category-id', categoryId);
        categoryDiv.innerHTML = `
          <input type="text" class="form-control category-name" placeholder="Enter a category name" aria-label="Category for Day ${dayNumber}" name="Day${dayNumber}[Categories][${categoryId.split('_')[categoryId.split('_').length - 1]}][name]" data-category-id="${categoryId}">
          <input type="hidden" class="category-time" name="Day${dayNumber}[Categories][${categoryId.split('_')[categoryId.split('_').length - 1]}][time]" data-category-id="${categoryId}">
          <input type="hidden" class="category-conflicts" name="Day${dayNumber}[Categories][${categoryId.split('_')[categoryId.split('_').length - 1]}][conflicts]" data-category-id="${categoryId}">
          <button class="btn btn-primary btn-sm" type="button" title="Edit" onclick="openEditModal('${categoryId}', ${dayNumber})">
            <i class="bi bi-pencil"></i>
          </button>
          <button class="btn btn-danger" type="button" title="Remove">
            <i class="bi bi-trash"></i>
          </button>
        `;

        categoryDiv.querySelector('.btn-danger').addEventListener('click', function() {
          delete categories[categoryId];
          container.removeChild(categoryDiv);
        });

        categoryDiv.querySelector('.category-name').addEventListener('input', function(e) {
          categories[categoryId].name = e.target.value;
        });

        container.appendChild(categoryDiv);
    }

    function openEditModal(categoryId, dayNumber) {
        const modal = new bootstrap.Modal(document.getElementById('editCategoryModal'));
        const categoryData = categories[categoryId];

        document.getElementById('modalCategoryId').value = categoryId;
        document.getElementById('modalDayNumber').value = dayNumber;
        document.getElementById('modalCategoryName').value = categoryData.name;
        document.getElementById('modalCategoryTime').value = categoryData.time;

        updateConflictedJudgesInModal();

        // Set conflicted judges checkboxes
        const checkboxes = document.querySelectorAll('#modalConflictedJudges input[type="checkbox"]');
        checkboxes.forEach(cb => {
          cb.checked = categoryData.conflictedJudges.includes(cb.value);
        });

        modal.show();
    }

    function updateConflictedJudgesInModal() {
        const judgeInputs = document.querySelectorAll('.judge-input');
        const container = document.getElementById('modalConflictedJudges');
        const currentCategoryId = document.getElementById('modalCategoryId').value;
        const currentConflicts = currentCategoryId ? categories[currentCategoryId].conflictedJudges : [];

        container.innerHTML = '';

        judgeInputs.forEach((input, index) => {
            if (input.value.trim()) {
                const checkDiv = document.createElement('div');
                checkDiv.classList.add('form-check');
                const checked = currentConflicts.includes(input.value) ? 'checked' : '';
                checkDiv.innerHTML = `
                  <input class="form-check-input" type="checkbox" value="${input.value}" id="judge${index}" ${checked}>
                  <label class="form-check-label" for="judge${index}">
                    ${input.value}
                  </label>
                `;
                container.appendChild(checkDiv);
            }
        });

        if (container.innerHTML === '') {
          container.innerHTML = '<p class="text-muted small">No judges added yet</p>';
        }
    }

    document.getElementById('saveCategoryBtn').addEventListener('click', function() {
        const categoryId = document.getElementById('modalCategoryId').value;
        const name = document.getElementById('modalCategoryName').value;
        const time = document.getElementById('modalCategoryTime').value;
        const conflictedJudges = Array.from(document.querySelectorAll('#modalConflictedJudges input:checked')).map(cb => cb.value);

        // Update category data
        categories[categoryId] = {
            name: name,
            time: time,
            conflictedJudges: conflictedJudges
        };

        // Update the visible input field
        const categoryNameInput = document.querySelector(`.category-name[data-category-id="${categoryId}"]`);
        if (categoryNameInput) {
          categoryNameInput.value = name;
        }

        // Update hidden fields
        const categoryTimeInput = document.querySelector(`.category-time[data-category-id="${categoryId}"]`);
        if (categoryTimeInput) {
          categoryTimeInput.value = time;
        }

        const categoryConflictsInput = document.querySelector(`.category-conflicts[data-category-id="${categoryId}"]`);
        if (categoryConflictsInput) {
          categoryConflictsInput.value = JSON.stringify(conflictedJudges);
        }

        bootstrap.Modal.getInstance(document.getElementById('editCategoryModal')).hide();
    });

    // Initialize
    addInputFieldtoJudgeContainer(document.getElementById('JudgeInputs'));
    addCategoryInputs(1);
</script>
</body>
</html>
