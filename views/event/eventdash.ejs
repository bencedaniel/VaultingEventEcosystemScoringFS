
  <div class="container my-4 border border-black border-1 border-opacity-25 rounded p-2" >
  <ul class="list-group">

    <li class="list-group-item border-0">
        <h3 class="text-center">Event Management</h3>
    </li>
    
  </ul>
<div class="d-flex justify-content-start align-items-center w-100 shadow-sm p-1 mb-4 bg-secondary bg-opacity-25 rounded border border-1 border-black border-opacity-10 flex-grow-1">
    <div class="w-50 d-flex m-1 ">
        <form class="form-inline w-75 "id="noSubmitForm">
          <input class="form-control mr-sm-2 rounded-0 rounded-start-1 border " type="search" placeholder="Search" aria-label="Search" id="search">
        </form>
        <div class="dropdown w-50 ">
            <button class="btn btn-primary dropdown-toggle rounded-0 rounded-end-1 " type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Select column
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" id="dropdownMenu">


            </div>

        </div>
  </div>
        <a href="/admin/event/new" class="btn btn-outline-primary w-50">Create New Event</a>

  </div>


<table class="table table-striped table-hover table-bordered w-100 m-0" id="TableBody">
        <thead class="table-primary">
            <th scope="col">Name</th>
            <th scope="col">Location</th>
            <th scope="col">Director Name</th>
            <th scope="col">Director Contact</th>
            <th scope="col">Selected</th>

            <th scope="col"  width="10%">&nbsp;</th>

        </thead>
        <tbody class="align-middle" id="TableBody">
            <% events.forEach(event => { %>
      <tr>
        <td><%= event.EventName %></td>
        <td><%= event.EventLocation %></td>
        <td><%= event.EventDirectorName %></td>
        <td><%= event.EventDirectorContact %></td>
        <td><%= event.selected ? 'Yes' : 'No' %></td>


        <td class="text-center" style="width: 15%;">
          <a href="/admin/event/details/<%= event._id %>" class="btn btn-info btn-sm shadow-none m-1"><i class="bi bi-info-circle"></i></a>
          <a href="/admin/event/edit/<%= event._id %>" class="btn btn-warning btn-sm shadow-none m-1"><i class="bi bi-pen"></i></a>

          <button type="button" class="btn btn-success btn-sm m-1" data-bs-toggle="modal"
                  data-bs-target="#selectModal" data-eventid="<%= event._id %>"><i class="bi bi-check"></i></button>
        </td>
      </tr>
            <% }); %>
        </tbody>
    </table>



<div class="modal fade" id="selectModal" tabindex="-1" event="dialog" aria-labelledby="deleteModalLabel"
    aria-hidden="true" style="backdrop-filter: blur(5px);">
    <div class="modal-dialog" event="document">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Select event</h5>
                <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="deleteConfirmationText">Are you sure you want to select this event?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="confirmSelectButton" data-deleteslug="event" data-beforeurl="/admin">Select</button>
            </div>
        </div>
    </div>
</div>




<script>
document.addEventListener('DOMContentLoaded', function() {
    let IdToSelect = null;
    const selectModal = document.getElementById('selectModal');
    const confirmSelectButton = document.getElementById('confirmSelectButton');

    selectModal?.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget;
        IdToSelect = button.getAttribute('data-eventid');
    });

    confirmSelectButton?.addEventListener('click', () => {
        fetch('/admin/event/selectEvent/' + IdToSelect, {
            method: 'POST'
        }).then(response => {
            if (response.ok) {
                window.location.reload();
            } else {
                window.location.reload();
            }
        });
    });
});
</script>