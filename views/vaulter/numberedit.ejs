<div class="container my-4 border border-black border-1 border-opacity-25 rounded p-2" >
  <ul class="list-group">

    <li class="list-group-item border-0">
        <h3 class="text-center">Arm Number editor</h3>
    </li>

  </ul>
<div class="d-flex justify-content-start align-items-center w-100 shadow-sm p-1 mb-4 bg-secondary bg-opacity-25 rounded border border-1 border-black border-opacity-10 flex-grow-1">
    <div class="w-50 d-flex m-1 ">
        <form class="form-inline w-75 "id="noSubmitForm">
          <input class="form-control mr-sm-2 rounded-0 rounded-start-1 border " type="search" placeholder="Search" aria-label="Search" id="search">
        </form>
        <div class="dropdown w-50 ">
            <button class="btn btn-primary dropdown-toggle rounded-0 rounded-end-1 " type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Select column
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" id="dropdownMenu">

            </div>

        </div>
  </div>

  </div>

<table class="table table-striped table-hover table-bordered w-100 m-0" id="TableBody">
        <thead class="table-primary">
            <th scope="col">Name</th>
            <th scope="col">Gender</th>
            <th scope="col">FEI ID</th>
            <th scope="col">Nationality</th>
            <th scope="col">Status</th>
            <th scope="col"  width="20%">Arm Nr</th>

        </thead>
        <tbody class="align-middle" id="TableBody">
            <% vaulters.forEach(vaulter => { %>
      <tr>
        <td><%= vaulter.Name %></td>
        <td><%= vaulter.gender %></td>
        <td><%= vaulter.feiid %></td>
        <td><%= vaulter.Nationality %></td>
        <td><%= vaulter.Status %></td>

        <td class="text-center" style="width: 15%;">
            <div class="d-flex">
           <input type="text" class="form-control ArmNrInput m-2" onclick="markFormAsChanged('<%= vaulter._id %>')" id="input_<%= vaulter._id %>" value="<%= vaulter.ArmNr[0]?.armNumber || '' %>">
           <button class="btn btn-secondary m-2 w-75 SaveButtons" id="button_<%= vaulter._id %>" onclick="ElementSaved('<%= vaulter._id %>')">Saved</button>
           </div>
        </td>
      </tr>
            <% }); %>
        </tbody>
    </table>

<div class="modal fade" id="deleteModal" tabindex="-1" horse="dialog" aria-labelledby="deleteModalLabel"
    aria-hidden="true" style="backdrop-filter: blur(5px);">
    <div class="modal-dialog" horse="document">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete horse</h5>
                <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="deleteConfirmationText">Are you sure you want to delete this horse?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton" data-deleteslug="horse" data-beforeurl="/admin">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    function updateVetStatus(horseId, newStatus) {
        fetch('/entry/updateVetStatus/' + horseId, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ status: newStatus })
        }).then(response => {
                window.location.reload();
        });
    }
document.addEventListener('DOMContentLoaded', function() {
    let IdToDelete = null;
    const deleteModal = document.getElementById('deleteModal');
    const confirmDeleteButton = document.getElementById('confirmDeleteButton');

    deleteModal?.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget;
        IdToDelete = button.getAttribute('data-horseid');
    });

    confirmDeleteButton?.addEventListener('click', () => {
        fetch('/horse/delete/' + IdToDelete, {
            method: 'DELETE'
        }).then(response => {
                window.location.reload();

        });
    });
});
</script>
<script>
    let formChanged = 0;
    window.addEventListener('beforeunload', (event) => {
        if (formChanged !== 0) {
            event.preventDefault();
            event.returnValue = 'Biztosan el akarod hagyni az oldalt? A módosítások elveszhetnek!';
            // Fontos: a böngésző ezt nem mutatja szó szerint, csak a standard figyelmeztetést.
            return event.returnValue;
        }
    });

    function markFormAsChanged(id) {
        const buttonid = 'button_'+id
        const button = document.getElementById(buttonid)
        button.innerHTML='Save';
        button.classList.remove('btn-secondary')
        button.classList.add('btn-success')

        const SaveButtons = document.getElementsByClassName('SaveButtons')
        formChanged++;

    }

    function ElementSaved(id) {
        console.log('lefut')
        const buttonid = 'button_'+id
        const button = document.getElementById(buttonid)
        button.classList.remove('btn-success')
        button.classList.add('btn-secondary')
        button.innerHTML='Saved';

        const SaveButtons = document.getElementsByClassName('SaveButtons')
        formChanged = 0;
        Array.from(SaveButtons).forEach(element => {
            if(element.innerHTML === 'Save'){
                formChanged++;
            }

        });
         fetch('/vaulter/updatenums/'+id, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ armNumber: document.getElementById('input_'+id).value })
        }).then(response => {
            if (response.ok) {
                 ShowSuccessToast('Arm number saved successfully!');
            } else {
                window.location.reload();
            }
        });

    }

</script>
