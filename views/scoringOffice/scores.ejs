<div class="container my-4 border border-black border-1 border-opacity-25 rounded p-2" >
  <ul class="list-group">

    <li class="list-group-item border-0">
        <h3 class="text-center">Score Sheet manager</h3>
    </li>

  </ul>
<div class="d-flex justify-content-start align-items-center w-100 shadow-sm p-1 mb-4 bg-secondary bg-opacity-25 rounded border border-1 border-black border-opacity-10 flex-grow-1">
    <div class="w-50 d-flex m-1 ">
        <form class="form-inline w-75 "id="noSubmitForm">
          <input class="form-control mr-sm-2 rounded-0 rounded-start-1 border " type="search" placeholder="Search" aria-label="Search" id="search">
        </form>
        <div class="dropdown w-50 ">
            <button class="btn btn-primary dropdown-toggle rounded-0 rounded-end-1 " type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Select column
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" id="dropdownMenu">

            </div>

        </div>
  </div>
        <a href="/scoring/office/score/new" class="btn btn-outline-primary w-50">Create New ScoreSheet</a>

  </div>

<table class="table table-striped table-hover table-bordered w-100 m-0" id="TableBody">
        <thead class="table-primary">
            <th scope="col">Program Name</th>
            <th scope="col">Vaulters / Team Name</th>
            <th scope="col">Category</th>
            <th scope="col">Scoresheets</th>
            <th scope="col">Total</th>
            <th scope="col"  width="10%">&nbsp;</th>

        </thead>
        <tbody class="align-middle" id="TableBody">
            <% scores.forEach(score => { %>
      <tr>
        <td><%= score.timetablepart.Name %></td>
        <td>
          <% if (score.entry.teamName && score.entry.teamName !== '') { %>
            <%= score.entry.teamName %>

          <% } else if (score.entry.vaulter && score.entry.vaulter.Name) { %>
            <%= score.entry.vaulter.Name %>
          <% } else if (Array.isArray(score.entry.vaulter)) { %>
            <%= score.entry.vaulter.map(v => v.Name).join(', ') %>
          <% } else { %>
            N/A
          <% } %>
        </td>
        <td><%= score.entry.category.CategoryDispName %></td>
        <td class="text-center">

          <%score.scoresheets.sort((a, b) => a.table.localeCompare(b.table)).forEach(element => { %>
            <a href="/scoring/office/scoresheet/edit/<%= element.scoreId %>" class="btn btn-success btn-sm shadow-none m-1">Edit <%= element.table %><i class="bi bi-pen"></i></a>

            <% });%>

        </td>
                <td id="total-<%= score._id %>"></td>

        <td class="text-center" style="width: 15%;">
         <button type="button" class="btn btn-info btn-sm m-1" data-bs-toggle="modal"
                        data-bs-target="#recalcModal" data-scoreid="<%= score._id %>"><i class="bi bi-arrow-repeat"></i></button>

        </td>
      </tr>
            <% }); %>
        </tbody>
    </table>

<div class="modal fade" id="recalcModal" tabindex="-1" score="dialog" aria-labelledby="recalcModalLabel"
    aria-hidden="true" style="backdrop-filter: blur(5px);">
    <div class="modal-dialog" score="document">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title" id="recalcModalLabel">Recalculate score</h5>
                <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="deleteConfirmationText">Are you sure you want to recalculate this score?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-info" id="confirmRecalcButton" data-recalcslug="score" data-beforeurl="/admin">Recalculate</button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    let IdToRecalc = null;
    const recalcModal = document.getElementById('recalcModal');
    const confirmRecalcButton = document.getElementById('confirmRecalcButton');

    // Kitöltés a TotalScore értékekkel
    const scores = <%- JSON.stringify(scores) %>;
    scores.forEach(score => {
        const elem = document.getElementById('total-' + score._id);
        if (elem) {
            elem.textContent = excelRound(score.TotalScore, 3);
        }
    });

    recalcModal?.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget;
        IdToRecalc = button.getAttribute('data-scoreid');
    });

    confirmRecalcButton?.addEventListener('click', () => {
        fetch('/scoring/office/scores/recalculate/' + IdToRecalc, {
            method: 'POST'
        }).then(response => {
            if (response.ok) {
                window.location.reload();
            } else {
                window.location.reload();
            }
        });
    });
});
</script>
